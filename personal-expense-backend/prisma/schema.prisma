generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())

  transactions Transaction[]
  budgets      Budget[]
  investments  Investment[]
  dashboard    DashboardLayout?
}

model Transaction {
  id        String   @id @default(uuid())
  userId    String
  name      String
  category  String
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Budget {
  id        String   @id @default(uuid())
  userId    String
  category  String
  limit     Float
  rollover  Float   @default(0)
  month     String  // YYYY-MM
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Investment {
  id        String   @id @default(uuid())
  userId    String
  symbol    String
  name      String
  value     Float
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model DashboardLayout {
  id        String   @id @default(uuid())
  userId    String   @unique
  layout    Json
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}